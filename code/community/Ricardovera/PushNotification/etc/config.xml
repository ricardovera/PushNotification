<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<Ricardovera_PushNotification>
			<active>false</active>
			<codePool>community</codePool>
		</Ricardovera_PushNotification>
	</modules>
	<global>
		<models>
			<ricardovera_pushnotification>
				<class>Ricardovera_PushNotification_Model</class>
			</ricardovera_pushnotification>
		</models>
		<events>
			<sales_order_status_change>
		        <observers>
		          <sales_order_status_change_handler> 
		            <type>singleton</type> 
		            <class>ricardovera_pushnotification/observer</class>
		            <method>implementOrderStatus</method>
		            <args></args>
		          </sales_order_status_change_handler>
		        </observers>
		    </sales_order_status_change>
			<catalog_product_save_after>
				<observers>
					<ricardovera_pushnotification>
                        <class>ricardovera_pushnotification/observer</class>
                        <method>control</method>
						<type>singleton</type>
					</ricardovera_pushnotification>
				</observers>
			</catalog_product_save_after>
		</events>
		<resources>
                <ricardovera_pushnotification_setup>
                    <setup>
                        <module>Ricardovera_PushNotification</module>
                        <class>Mage_Customer_Model_Entity_Setup</class>
                    </setup>
                    <connection>
                        <use>core_setup</use>
                    </connection>
                </ricardovera_pushnotification_setup>
                <ricardovera_pushnotification_write>
                    <connection>
                        <use>core_write</use>
                    </connection>
                </ricardovera_pushnotification_write>
                <ricardovera_pushnotification_read>
                    <connection>
                        <use>core_read</use>
                    </connection>
                </ricardovera_pushnotification_read>
            </resources>
	</global>
	<frontend>
        <routers>
		    <pushnotification>
		        <use>standard</use>
		        <args>
		            <module>Ricardovera_PushNotification</module>
		            <frontName>pushnotification</frontName>
		        </args>
		    </pushnotification>
		</routers>
    </frontend>
</config>